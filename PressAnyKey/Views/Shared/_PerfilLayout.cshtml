@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/js/index.js"></script>

    <link href="https://fonts.googleapis.com/css?family=Roboto+Condensed&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Raleway&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Gelasio&display=swap" rel="stylesheet">

</head>
<body style="background: #18262b;">
    <div class="container">
        <div style="height: 15pc;background: linear-gradient(#3f8258, #225b51);"></div>
        <header style="padding: 0px;border-radius: 0px 0px 8px 8px;" class="navbar navbar-expand-sm bg-customc1 navbar-dark">
            <div class="perfil-img-column">
                <a href="#">
                    <div class="perfil-img"></div>
                </a>
            </div>

            <div class="container navbar-nav">
                @if (SignInManager.IsSignedIn(User))
                {
                    <a class="nounderline nav-item" asp-area="" asp-controller="Feed" asp-action="Index"><img style="width: 80%;padding: 4px;" src="~/images/Logo5.png" /></a>
                }
                else
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img style="width: 80%;padding: 4px;" src="~/images/Logo5.png" /></a>
                }
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_PerfilPartial" />
                </div>
            </div>
        </header>
    </div>
    <div class="container">
        @RenderBody()
    </div>

    <footer style="position: inherit !important; background:#ffffff0d;" class="custom-bt footer text-muted">
        <div style="padding: 16px 9%;">
            &copy; 2019 - PressAnyKey - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
</body>
</html>
